<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".activity.SignUpActivity">
    <!--Main Layout-->
    <!--
        android:background="@color/gray_dark"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dark_blue_gradient"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white_cream"
                        android:textSize="@dimen/head_font_size_xxhdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white_cream"
                        android:textSize="@dimen/head_font_size_xxhdpi" />
                </LinearLayout>
                <LinearLayout
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="15dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:tint="@color/orange_radiant"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/img_email"/>
                                <com.axolotl.axo.customview.EditTextWithClear
                                    android:id="@+id/etSignUpEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white_cream"
                                    android:backgroundTint="@color/white_cream"
                                    android:inputType="text"
                                    android:textColorHint="@color/white_cream"
                                    android:hint="Email"
                                    android:textSize="@dimen/font_size_xxhdpi"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="15dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:tint="@color/orange_radiant"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/img_user"/>
                                <com.axolotl.axo.customview.EditTextWithClear
                                    android:id="@+id/etSignUpUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white_cream"
                                    android:backgroundTint="@color/white_cream"
                                    android:inputType="text"
                                    android:textColorHint="@color/white_cream"
                                    android:hint="Username"
                                    android:textSize="@dimen/font_size_xxhdpi"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="15dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:tint="@color/orange_radiant"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/img_password"/>
                                <com.axolotl.axo.customview.EditTextWithClear
                                    android:id="@+id/etSignUpPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white_cream"
                                    android:backgroundTint="@color/white_cream"
                                    android:inputType="text"
                                    android:textColorHint="@color/white_cream"
                                    android:hint="Password"
                                    android:textSize="@dimen/font_size_xxhdpi"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="15dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:tint="@color/orange_radiant"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/img_password"/>
                                <com.axolotl.axo.customview.EditTextWithClear
                                    android:id="@+id/etSignUpConfirmPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white_cream"
                                    android:backgroundTint="@color/white_cream"
                                    android:inputType="text"
                                    android:textColorHint="@color/white_cream"
                                    android:hint="Confirm Password"
                                    android:textSize="@dimen/font_size_xxhdpi"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSignUp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sign Up"
                                android:textSize="@dimen/font_size_xxhdpi"
                                android:fontFamily="sans-serif-black"
                                android:textColor="@color/white_cream"
                                android:background="@drawable/btn_background_round_orange"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">
                    <LinearLayout
                        android:paddingTop="10dp"
                        android:id="@+id/layoutGotoSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="@dimen/font_size_xxhdpi"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/white_cream"
                            android:text="Already have an account?"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_xxhdpi"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/orange_radiant"
                            android:text="SIGN IN"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>